            <ce:title id="cetitle10">Towards evidence-based, quantitative Sustainable Development Goals for 2030</ce:title>
            <ce:author-group id="aug10">
               <ce:author id="au10">
                  <ce:given-name>Børge</ce:given-name>
                  <ce:surname>Brende</ce:surname>
                  <ce:cross-ref id="cecref10" refid="aff1">
                     <ce:sup loc="post">a</ce:sup>
                  </ce:cross-ref>
                  
               </ce:author>
               <ce:author id="au20">
                  <ce:given-name>Bent</ce:given-name>
                  <ce:surname>Høie</ce:surname>
                  <ce:cross-ref id="cecref20" refid="aff2">
                     <ce:sup loc="post">b</ce:sup>
                  </ce:cross-ref>
               </ce:author>
               <ce:affiliation id="aff1">
                  <ce:label>a</ce:label>
                  <ce:textfn>Ministry of Foreign Affairs, 0032 Oslo, Norway</ce:textfn>
                  <sa:affiliation>
                     <sa:organization>Ministry of Foreign Affairs</sa:organization>
                     <sa:city>Oslo</sa:city>
                     <sa:postal-code>0032</sa:postal-code>
                     <sa:country>Norway</sa:country>
                  </sa:affiliation>
               </ce:affiliation>
               <ce:affiliation id="aff2">
                  <ce:label>b</ce:label>
                  <ce:textfn>Ministry of Health and Care Services, Oslo, Norway</ce:textfn>
                  <sa:affiliation>
                     <sa:organization>Ministry of Health and Care Services</sa:organization>
